{
  "expo": {
    "name": "poc-square-payments-sdk",
    "slug": "poc-square-payments-sdk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pocsquarepaymentssdk",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.pocsquarepaymentssdk",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app requires Bluetooth access to connect to Square card readers.",
        "NSBluetoothPeripheralUsageDescription": "This app requires Bluetooth access to connect to Square card readers.",
        "NSLocationWhenInUseUsageDescription": "This app requires location access to process payments.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app requires location access to process payments.",
        "NSMicrophoneUsageDescription": "This app requires microphone access for magstripe card readers.",
        "UISupportedExternalAccessoryProtocols": [
          "com.squareup.protocol.stand",
          "com.squareup.s089",
          "com.squareup.s025",
          "com.squareup.s020"
        ],
        "UIBackgroundModes": ["bluetooth-central", "external-accessory"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "./plugins/withSquareMobilePayments.js",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "16.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
